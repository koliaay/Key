            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>

        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Name="k1" Style="{StaticResource acbPink}">
